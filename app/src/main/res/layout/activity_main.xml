<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:text="125 + 152"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="80sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="288dp"
        android:layout_height="370dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#151515"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/BtnAllClr"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="AC"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ClrBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F80303"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="Clr"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBracketStart"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="("
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>


        <!-- Button Row 2-->

        <androidx.cardview.widget.CardView
            android:id="@+id/BtnSeven"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="7"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/BtnEight"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="8"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnNine"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBracketEnd"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=")"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/BtnModulas"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="#70EAD1"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="%"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <!-- Button Row 3-->

        <androidx.cardview.widget.CardView
            android:id="@+id/btnFour"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="4"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnFive"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="130dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="5"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSix"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="130dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnDiv"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="130dp"
            android:backgroundTint="#70EAD1"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="/"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <!-- Button Row 4-->

        <androidx.cardview.widget.CardView
            android:id="@+id/btnOne"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="190dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="1"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnTwo"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="190dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="2"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnThree"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="190dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnMultiply"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="190dp"
            android:backgroundTint="#70EAD1"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="*"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <!--  Btn Row 5-->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnDot"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="250dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="."
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnZero"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="250dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="serif"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnDublZero"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="250dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="00"
                android:textAlignment="center"
                android:textSize="30dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnMinus"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="250dp"
            android:backgroundTint="#70EAD1"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textAlignment="center"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnPlus"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="310dp"
            android:backgroundTint="#70EAD1"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textAlignment="center"
                android:textSize="30sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnEqual"
            android:layout_width="195dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="310dp"
            android:backgroundTint="#70EAD1"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:textAlignment="center"
                android:textSize="30sp" />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>